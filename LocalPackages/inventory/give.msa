        tmsg(@recipient,player().' gave you '.@a[2].' '.data_name(@a[0]))
      }
      msg(color(GRAY).'Giving '.@a[2].' of '.data_name(@a[0]).' to '.@recipient)
    @e,
      msg(color(RED).'Player not found!')
    )
  }
